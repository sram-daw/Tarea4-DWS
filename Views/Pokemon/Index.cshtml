@model IEnumerable<RamiloAlonsoSaraTarea4.Models.Pokemon>

@{
	ViewData["Title"] = "Index";
}

<h1>Lista de Pokemons</h1>

<!--<p>
	<a asp-action="Create">Create New</a>
</p>-->
@if (TempData["ErrorMessage"] != null)
{
	<div id="alert-message" class="alert alert-danger mt-4">
		@TempData["ErrorMessage"]
	</div>
}
@if (TempData["SuccessMessage"] != null)
{
	<div id="alert-message2" class="alert alert-success mt-4">
		@TempData["SuccessMessage"]
	</div>
}
<h3 class="my-3">@Html.ActionLink("Filtrar", "Filtrar" )</h3>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.PokemonId)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.nombre)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.peso)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.altura)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.PokemonId)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.nombre)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.peso)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.altura)
				</td>
				<td>

					@Html.ActionLink("Detalles", "DetallePokemon", new {  id=item.PokemonId  }) |
					@Html.ActionLink("Añadir al equipo", "AddToEquipo", new {  idPokemon=item.PokemonId})
				</td>
			</tr>
		}
	</tbody>
</table>

