@model RamiloAlonsoSaraTarea4.Models.PokemonDetalles

@{
	ViewData["Title"] = "DetallePokemon";
}

<div class="container">
	<h1>Detalles del Pokémon</h1>

	<div class="row">
		<div class="col-md-6">
			<h4>@Model.nombre</h4>
			<hr />
			<dl class="row">
				<dt class="col-sm-2">
					@Html.DisplayName("Evolución")
				</dt>
				<dd class="col-sm-10 border-bottom">
					<ul>
						@foreach (var evoluciones in Model.evoluciones)
						{
							<li>@evoluciones</li>
						}
					</ul>
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayName("Involución")
				</dt>
				<dd class="col-sm-10 border-bottom">
					<ul>
						@foreach (var involuciones in Model.involuciones)
						{
							<li>@involuciones</li>
						}
					</ul>
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayName("Movimientos")
				</dt>
				<dd class="col-sm-10 border-bottom">
					<ul>
						@foreach (var movimiento in Model.movimientos)
						{
							<li>@movimiento</li>
						}
					</ul>
				</dd>
			</dl>

		</div>
		<div class="col-md-6 d-flex align-items-center justify-content-center">
			<img src=@Model.img class="w-75 ml-4" />
		</div>
	</div>

	<div>
		<!--@Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |-->
		<a asp-action="Index">Volver a la lista</a>
	</div>
</div>

