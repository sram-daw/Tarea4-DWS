@model RamiloAlonsoSaraTarea4.Models.PokemonDetalles

@{
    ViewData["Title"] = "DetallePokemon";
}

<h1>Detalles del Pokémon</h1>

<div>
    <h4>@Model.nombre</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.evolucion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.evolucion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.involucion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.involucion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.movimientos)
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var movimiento in Model.movimientos)
                {
                    <li>@movimiento</li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
