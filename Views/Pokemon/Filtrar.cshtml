@model RamiloAlonsoSaraTarea4.Models.Pokemon;

@{
    ViewData["Title"] = "Filtrar";
}

<h1>Filtrar Pokémons</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="FiltrarPorParams">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label for="tipos">Selecciona un tipo:</label>
                <select name="idTipo" id="tipos">
                    <option value="1">Agua</option>
                    <option value="2">Bicho</option>
                    <option value="3">Dragón</option>
                    <option value="4">Eléctrico</option>
                    <option value="5">Fantasma</option>
                    <option value="6">Fuego</option>
                    <option value="7">Hielo</option>
                    <option value="8">Lucha</option>
                    <option value="9">Normal</option>
                    <option value="10">Planta</option>
                    <option value="11">Psíquico</option>
                    <option value="12">Roca</option>
                    <option value="13">Tierra</option>
                    <option value="14">Veneno</option>
                    <option value="15">Volador</option>
                </select>
            </div>
            <div class="form-group mb-3">
                <label for="tipos">Selecciona un rango de peso:</label>
                <select name="peso" id="input-peso">
                    <option value="0.1-10">0,1-10</option>
                    <option value="11-25">11-25</option>
                    <option value="26-50">26-50</option>
                    <option value="51-75">51-75</option>
                    <option value="76-100">76-100</option>
                    <option value="100-500">100-500</option>
                </select>
            </div>
            <div class="form-group mb-3">
                <label for="tipos">Selecciona un rango de altura:</label>
                <select name="altura" id="input-altura">
                    <option value="0.1-0,9">0,1-0,9</option>
                    <option value="1-1,5">1-1,5</option>
                    <option value="1.6-2">1,6-2</option>
                    <option value="2.1-10">2,1-10</option>
                </select>
            </div>
            <div class="form-group mt-2" >
                <input type="submit" value="Filtrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt2">
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
