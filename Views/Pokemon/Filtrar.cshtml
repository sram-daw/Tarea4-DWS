@model RamiloAlonsoSaraTarea4.Models.Pokemon;

@{
    ViewData["Title"] = "Filtrar";
}

<h1>Filtrar Pokémons</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="FiltrarPokemonPorTipoPesoAltura">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="tipos">Selecciona un tipo:</label>
                <select name="idTipo" id="tipos">
                    <option value="1">Agua</option>
                    <option value="2">Bicho</option>
                    <option value="3">Dragón</option>
                    <option value="4">Eléctrico</option>
                    <option value="5">Fantasma</option>
                    <option value="6">Fuego</option>
                    <option value="7">Hielo</option>
                    <option value="8">Lucha</option>
                    <option value="9">Normal</option>
                    <option value="10">Planta</option>
                    <option value="11">Psíquico</option>
                    <option value="12">Roca</option>
                    <option value="13">Tierra</option>
                    <option value="14">Veneno</option>
                    <option value="15">Volador</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="peso" class="control-label">Peso</label>
                <input asp-for="peso" class="form-control" type="number"  />
                <span asp-validation-for="peso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="altura" class="control-label">Altura</label>
                <input asp-for="altura" class="form-control" type="number"/>
                <span asp-validation-for="altura" class="text-danger"></span>
            </div>
            <div class="form-group mt-2" >
                <input type="submit" value="Filtrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt2">
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
